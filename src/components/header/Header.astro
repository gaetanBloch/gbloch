<style lang="scss">
  $transition-function: ease;
  $transition-duration: 0.5s;
  $transition:
    backdrop-filter $transition-function $transition-duration,
    opacity $transition-function $transition-duration,
    font-weight $transition-function $transition-duration,
    background-color $transition-function $transition-duration;

  .header {
    grid-template-columns: auto 1fr;

    &-left {
      .MenuMode {
        @apply absolute -right-7 -top-3;
      }
    }
  }
</style>
