---
import Logo from './Logo.astro';
import HeaderLinks from './HeaderLinks.astro';
import ThemeSwitcher from './ThemeSwitcher.astro';
import LanguageSelector from './language-selector/LanguageSelector.astro';
import ToggleMenu from './ToggleMenu.astro';
import { t } from 'i18next';
import HeaderButton from '../buttons/Button.astro';
import HeaderLink from './HeaderLink.astro';
import { links } from '../../utils/types';
---

<header class="px-5 pt-5 pb-5 grid md:px-14 lg:px-28 md:pb-10 md:pt-10">
  <div class="justify-self-start self-center relative z-20 grid-cols-1">
    <Logo />
  </div>
  <div class="justify-self-end self-center space-x-4 z-20 hidden md:block">
    <HeaderLinks />
    <div class="inline-flex gap-5">
      <LanguageSelector />
      <ThemeSwitcher />
    </div>
  </div>
  <div class="inline-flex items-center align-middle gap-5 self-center justify-self-end md:hidden">
    <LanguageSelector />
    <ThemeSwitcher />
    <ToggleMenu />
  </div>
  <div
    id="vertical-menu"
    class="hidden flex h-screen justify-self-center flex-col col-span-2 gap-5 mt-5 items-center"
  >
    {links.map(link => <HeaderLink name={t(link.i18nKey)} horizontal={false} url={link.url} />)}
    <span class="mt-3">
      <HeaderButton i18nKey="header.resume" />
    </span>
  </div>
</header>

<style lang="scss">
  header {
    grid-template-columns: auto 1fr;
  }
</style>
