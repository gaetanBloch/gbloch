---
import { t } from 'i18next';

interface Props {
  i18nKey: string;
}

const { i18nKey } = Astro.props;
---

<button
  class="font-black text-[1.05em] text-primary border-2 rounded dark:text-primary-light px-4 py-2 select-none focus:outline-none"
>
  {t(i18nKey)}
  <slot />
</button>

<style lang="scss">
  $animation: ease-in-out;
  $duration: 0.4s;
  $transitionButton:
    border-color $animation $duration,
    color $animation $duration,
    background-color $animation $duration;
  $transitionIcon:
    color $animation $duration,
    transform $animation $duration;

  button {
    transition: $transitionButton;
    &:hover,
    &:active,
    &:focus {
      @apply border-primary bg-primary text-background dark:border-primary-light dark:bg-primary-light;
    }
  }
</style>
